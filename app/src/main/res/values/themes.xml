<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AGGRICUS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AGGRICUS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="lini">

        <item name="background">
            @color/aftahgreen
        </item>
        <item name="circularflow_angles">
            10
        </item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">2dp</item>
    </style>



    <style name="line">
        <item name="android:background">

            @color/black
        </item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="linearith">
        <item name="android:background">

            @color/white
        </item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">2dp</item>
    </style>
    <style name="lineakhchen">
        <item name="android:background">

            @color/Darkgreen
        </item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">5dp</item>
    </style>
    <style name="Theme.AGGRICUS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AGGRICUS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>