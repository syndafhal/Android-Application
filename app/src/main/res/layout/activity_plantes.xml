<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/greenibg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:rotationX="-8"
            android:rotationY="4"
            android:id="@+id/texti"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:fontFamily="cursive"
            android:text=" Plantes aromatiques et medicinales"
            android:textAlignment="center"
            android:textColor="@color/Darkgreen"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/amande1"
            android:layout_margin="20dp">

            <TextView
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="25dp"
                android:text="huile d'amande"
                android:textColor="@color/Darkgreen"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/play"
                android:shadowColor="@color/Darkgreen"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-18dp"
                android:background="#0000"
                android:fontFamily="cursive"

                android:padding="20dp"
                android:rotationX="-8"
                android:rotationY="4"
                android:text="Ouvrir"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/Darkgreen"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-33dp"
                android:src="@drawable/product1" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/nigelle"
            android:layout_margin="20dp">

            <TextView
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="25dp"
                android:text="huile nigelle"
                android:textColor="@color/Darkgreen"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:shadowColor="@color/Darkgreen"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:id="@+id/play2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#0000"
                android:fontFamily="cursive"
                android:padding="20dp"
                android:rotationX="-8"
                android:rotationY="4"
                android:text="Ouvrir"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/Darkgreen"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-57dp"
                android:src="@drawable/product2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/sesame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="25dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="huile sesame"
                android:textColor="@color/Darkgreen"

                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:shadowColor="@color/Darkgreen"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:id="@+id/play3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:fontFamily="cursive"
                android:padding="20dp"
                android:rotationX="-8"
                android:rotationY="4"
                android:text="Ouvrir"
                android:textColor="@color/Darkgreen"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-52dp"
                android:src="@drawable/product3" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/jojoba"
            android:layout_margin="20dp">

            <TextView
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="25dp"
                android:textStyle="bold"
                android:text="huile jojoba"
                android:textColor="@color/Darkgreen"
                android:textSize="30sp" />

            <Button
                android:shadowColor="@color/Darkgreen"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/play4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:fontFamily="cursive"

                android:padding="20dp"
                android:text="Ouvrir"
                android:textColor="@color/Darkgreen"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-60dp"
                android:src="@drawable/product4" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@color/Transp">

            <ImageView
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="87dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/baliz"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:shadowColor="@color/white"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:id="@+id/arjaa2"
                android:layout_width="104dp"
                android:layout_height="49dp"
                android:layout_marginStart="144dp"
                android:layout_marginBottom="16dp"
                android:background="@color/Transp"
                android:fontFamily="cursive"
                android:text="Retour"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>