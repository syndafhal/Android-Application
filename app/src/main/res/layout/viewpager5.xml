<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bjround"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bjround"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/bjround"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="380dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bjround">


            <ImageView
                android:id="@+id/pantoufl"
                android:layout_width="match_parent"
                android:layout_height="428dp"
                android:contentDescription="@string/todoooooooooooooo"
                android:scaleType="centerCrop"
                android:src="@drawable/pantoufl" />

            <TextView
                android:id="@+id/tvheadingeerr"
                android:layout_width="371dp"
                android:layout_height="33dp"
                android:layout_below="@+id/pantoufl"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="Pantoufle pour femme cinq"
                android:textColor="@color/Darkgreen"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvheadings"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pantoufl"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="-41dp"
                android:fontFamily="cursive"
                android:text="Ã  4O Dt"
                android:textColor="#B26106"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="312dp" />

        </RelativeLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>