<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hloaaaaa"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MAILGO">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="367dp"
        android:layout_height="544dp"
        android:background="@drawable/bjround"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewee"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="460dp"
            android:fontFamily="cursive"
            android:text=" Mailing"
            android:textColor="@color/Darkgreen"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="377dp"
            android:layout_height="156dp"
            android:layout_marginVertical="300dp"
            android:contentDescription="@string/todo"
            android:paddingVertical="30dp"
            android:src="@drawable/a"
            app:layout_constraintTop_toBottomOf="@android:id/background"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-38dp" />


        <EditText
            android:id="@+id/laaa"
            android:layout_width="244dp"
            android:layout_height="44dp"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/bjround"
            android:gravity="top"
            android:hint="Ã  propos de ?"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/laa"
            android:layout_width="325dp"
            android:layout_height="123dp"
            android:layout_marginTop="264dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bjround"
            android:foregroundGravity="top"
            android:gravity="top"
            android:hint="Message"

            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/butout"
            android:layout_width="154dp"
            android:layout_height="76dp"
            android:layout_marginStart="112dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/bjround"
            android:backgroundTint="@color/Darkgreen"
            android:fontFamily="cursive"
            android:onClick="clicker"
            android:padding="14dp"
            android:shadowColor="@color/white"
            android:text="envoyez "
            android:textAllCaps="false"
            android:textColor="@color/aftahgreen"
            android:textSize="28sp"
            android:textStyle="bold"
            app:iconTint="@color/Darkgreen"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:strokeColor="@color/Darkgreen" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>