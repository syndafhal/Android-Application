<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="660dp"
    android:layout_width="match_parent"
    android:maxHeight="800dp"
    android:padding="10dp"
    tools:context=".MailOlfa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/achette">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"

        android:gravity="center"
        android:padding="20dp"
        tools:context=".MailOlfa">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="1000dp"
            android:background="@drawable/bjround"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/textViewee1"
                android:layout_width="213dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="820dp"
                android:fontFamily="cursive"
                android:text="Commandez Chez"
                android:textColor="@color/Darkgreen"
                android:textSize="29dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewee3"
                android:layout_width="201dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="788dp"
                android:fontFamily="cursive"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Mr Dirouri Aladdine"
                android:textColor="@color/Darkgreen"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="218dp"
                android:layout_height="134dp"
                android:layout_marginVertical="300dp"
                android:contentDescription="@string/todo"
                android:paddingVertical="30dp"
                android:src="@drawable/a"
                app:layout_constraintTop_toBottomOf="@android:id/background"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="24dp" />

            <EditText
                android:id="@+id/nom"
                android:layout_width="216dp"
                android:layout_height="43dp"

                android:layout_marginTop="252dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bjround"
                android:drawablePadding="11dp"
                android:gravity="top"
                android:hint="Nom *éspace*"
                android:padding="10dp"
                android:textColorLink="@color/green"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/Prénom"
                android:layout_width="219dp"
                android:layout_height="40dp"
                android:layout_marginTop="304dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bjround"
                android:drawablePadding="11dp"
                android:gravity="top"
                android:hint="Prénom"
                android:padding="10dp"
                android:textColorLink="@color/green"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/num44"
                android:layout_width="224dp"
                android:layout_height="37dp"

                android:layout_marginTop="608dp"


                android:background="@drawable/bjround"
                android:drawablePadding="11dp"
                android:gravity="top"

                android:hint="Numéro de téléphone"
                android:inputType="phone"
                android:padding="10dp"
                android:textColorLink="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pageofficiele25"
                android:layout_width="61dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="12dp"
                android:outlineSpotShadowColor="@color/Darkgreen"
                android:src="@drawable/pantoufl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Prénom" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pageofficiele"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="64dp"
                android:outlineSpotShadowColor="@color/Darkgreen"
                android:src="@drawable/pantouffleblueroi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Prénom" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pageofficiele3"
                android:layout_width="59dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="116dp"
                android:outlineSpotShadowColor="@color/Darkgreen"
                android:src="@drawable/pantoufllevlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Prénom" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pageofficiele4"
                android:layout_width="76dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="124dp"
                android:layout_marginTop="168dp"
                android:outlineSpotShadowColor="@color/Darkgreen"
                android:src="@drawable/art2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Prénom" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="335dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="528dp"
                android:fontFamily="cursive"
                android:text="choix 2"
                android:textColor="@color/green"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="301dp"
                android:layout_height="44dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="580dp"
                android:fontFamily="cursive"
                android:text="choix 1"
                android:textColor="@color/green"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="316dp"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="484dp"
                android:fontFamily="cursive"
                android:text="choix 3"
                android:textColor="@color/green"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/adress"
                android:layout_width="227dp"
                android:layout_height="108dp"

                android:layout_marginTop="680dp"


                android:background="@drawable/bjround"
                android:drawablePadding="11dp"
                android:gravity="top"

                android:hint="Adresse"
                android:padding="10dp"
                android:textColorLink="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/butout2"
                android:layout_width="154dp"
                android:layout_height="76dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bjround"
                android:backgroundTint="@color/Darkgreen"
                android:fontFamily="cursive"

                android:padding="14dp"
                android:shadowColor="@color/white"
                android:text="envoyez "
                android:textAllCaps="false"
                android:textColor="@color/aftahgreen"
                android:textSize="28sp"
                android:textStyle="bold"
                app:iconTint="@color/Darkgreen"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent=".8"
                app:strokeColor="@color/Darkgreen" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="335dp"
                android:layout_height="52dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="428dp"
                android:fontFamily="cursive"
                android:text="choix 4"
                android:textColor="@color/green"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>











</ScrollView>